// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Camera {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  streamLink      String
  location        Location @relation(fields: [locationId], references: [id])
  locationId      String   @db.ObjectId
  detectedSuspect Suspect  @relation(fields: [suspectId], references: [id])
  suspectId       String   @unique @db.ObjectId
}

model Capture {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  suspect    Suspect  @relation(fields: [suspectId], references: [id])
  suspectId  String   @unique @db.ObjectId
  picture    String
  location   Location @relation(fields: [locationId], references: [id])
  capturedAt DateTime @default(now())
  locationId String   @db.ObjectId
}

model Location {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  estate   String
  city     String
  district String
  street   String
  capture  Capture[]
  camera   Camera[]
}

model Suspect {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  cpf                String    @unique
  criminalMotivation String
  picture            String
  reason             String
  levelWanted        Int
  description        String
  status             Status    @default(Preso)
  capture            Capture?
  camera             Camera?
  isActivated        Boolean   @default(true)
  createdDate        DateTime  @default(now())
  updatedDate        DateTime  @updatedAt
  deactivatedDate    DateTime?
}

model Agent {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  rg                String    @unique
  cpf               String    @unique
  user              String    @unique
  cellNumber        String
  birthDate         DateTime
  publicPlace       String
  number            Int
  district          String
  complement        String?
  zipCode           String
  city              String
  state             String
  commander         String
  militaryRank      String
  divisionAddress   String
  officeDescription String
  password          String
  type              Role      @default(User)
  isActivated       Boolean   @default(true)
  creationDate      DateTime  @default(now())
  updateDate        DateTime  @updatedAt
  deactivatedDate   DateTime?
}

enum Status {
  Foragido
  Preso
}

enum Role {
  Admin
  User
}
