<div class="grid">
  <nav class="navbar">
    <h1 class="title">{{title}}</h1>
    <div class="search">
      <input
        type="text"
        name="search"
        id="searchInput"
        placeholder="Consulta"
      />
      <i class="search-icon"></i>
    </div>
  </nav>
  <div class="table-container">
    <table class="table user-list">
      <thead>
        <tr>

          <th>RG<i class="down"></i></th>
          <th>CPF<i class="down"></i></th>
          <th>Nome<i class="down"></i></th>
          <th>CEP<i class="down"></i></th>
          <th>Patente<i class="down"></i></th>
          <th>Comandante<i class="down"></i></th>
          <th>End. Divisão<i class="down"></i></th>
          <th>Descrição Cargo<i class="down"></i></th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>

            <td>{{rg}}</td>
            <td data-cpf="{{cpf}}">{{cpf}}</td>
            <td>{{name}}</td>
            <td>{{zipCode}}</td>
            <td>{{militaryRank}}</td>
            <td>{{commander}}</td>
            <td>{{divisionAddress}}</td>
            <td>{{officeDescription}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="actions">
    <ul>
      <li class="link"><a
          href="/user/admin/create/user"
          target="_blank"
        >Cadastrar</a></li>
      <li class="link"><a
          id="update-action"
          href="/user/admin/update/user"
          target="_blank"
        >Atualizar</a></li>
      <li class="link"><a
          id="delete-action"
          href="/user/admin/delete/user"
          target="_blank"
        >Inativar</a></li>
    </ul>
  </div>
</div>
<link rel="stylesheet" href="/styles/list.css" />
<script src="/js/actions.js"></script>