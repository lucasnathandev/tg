<div class="grid">
  <h1 class="title">{{title}}</h1>
    {{#if updateMode}}
    <form
    action="/user/admin/update/user/{{user.id}}/complete"
    method="post"
    id="create-user"
  >
      <section id="personalData">
        <div class="input w-100">
          <label for="" id="name">Nome</label>
          <input
            value="{{user.name}}"
            class="w-100"
            type="text"
            id="name"
            name="name"
            required
          />
        </div>
        <div class="input">
          <label for="" id="">CPF</label>
          <input
            disabled
            value="{{user.cpf}}"
            type="text"
            id="cpf"
            name="cpf"
            minlength="11"
            maxlength="14"
            required
          />
        </div>
        <div class="input">
          <label for="" id="">RG</label>
          <input
            disabled
            value="{{user.rg}}"
            type="text"
            id="rg"
            name="rg"
            minlength="10"
            maxlength="12"
            required
          />
        </div>
        <div class="input">
          <label for="" id="birth">Data de Nascimento</label>
          <input
            value="{{user.birthDate}}"
            type="date"
            name="birthDate"
            id=""
            maxlength="10"
            required
          />
        </div>
        <div class="input">
          <label for="" id="phone">Contato</label>
          <input
            value="{{user.cellNumber}}"
            type="text"
            id="cellPhone"
            name="cellNumber"
            minlength="10"
            maxlength="14"
          />
        </div>
      </section>
      <section id="address">
        <div class="input">
          <label for="zipcode" id="zipcode">CEP</label>
          <input
            value="{{user.zipCode}}"
            minlength="8"
            maxlength="9"
            type="text"
            id="zipcode"
            name="zipCode"
            placeholder="12345-678"
          />
        </div>
        <div class="input w-100">
          <label for="publicPlace" id="">Endereço</label>
          <input
            value="{{user.publicPlace}}"
            class="w-100"
            type="text"
            id="publicPlace"
            name="publicPlace"
            required
          />
        </div>
        <div class="input">
          <label for="district">Número</label>
          <input
            value="{{user.number}}"
            type="text"
            id="number"
            name="number"
            required
          />
        </div>
        <div class="input">
          <label for="district" id="">Bairro</label>
          <input
            value="{{user.district}}"
            type="text"
            id="district"
            name="district"
            required
          />
        </div>
        <div class="input">
          <label for="city" id="">Cidade</label>
          <input
            value="{{user.city}}"
            type="text"
            id="city"
            name="city"
            required
          />
        </div>
        <div class="input">
          <label for="state" id="">Estado</label>
          <input
            value="{{user.state}}"
            type="text"
            id="state"
            name="state"
            required
          />
        </div>
        <div class="input">
          <label for="complement" id="">Complemento</label>
          <input value="{{user.complement}}" type="text" id="complement" />
        </div>
      </section>
      <section id="militaryData">
        <div class="input">
          <label for="militaryRank" id="">Patente</label>
          <input
            value="{{user.militaryRank}}"
            type="text"
            id="militaryRank"
            name="militaryRank"
            required
          />
        </div>
        <div class="input">
          <label for="commander" id="">Comandante</label>
          <input
            value="{{user.commander}}"
            type="text"
            id="commander"
            name="commander"
            required
          />
        </div>
        <div class="input w-100">
          <label for="divisionAddress" id="">Endereço da divisão pertencente</label>
          <input
            value="{{user.divisionAddress}}"
            class="w-100"
            type="text"
            id="divisionAddress"
            name="divisionAddress"
            required
          />
        </div>
        <div class="input w-100">
          <label for="" id="">Descrição de Cargo</label>
          <input
            value="{{user.officeDescription}}"
            class="w-100"
            type="text"
            id="officeDescription"
            name="officeDescription"
            required
          />
        </div>
        <div class="input">
          <label for="">Tipo</label>
          <select name="type" id="userType">
            {{#if isAdmin}}
              <option value="User">Usuário</option>
              <option selected value="Admin">Administrador</option>
            {{else}}
              <option selected value="User">Usuário</option>
              <option value="Admin">Administrador</option>
            {{/if}}
          </select>
        </div>
        <div class="input">
          <label for="password">Senha</label>
          <input
            value="{{user.password}}"
            type="password"
            id="password"
            name="password"
            minlength="6"
            required
          />
        </div>
      </section>
      <button class="btn" type="submit">Atualizar</button>
    {{else}}
    <form
    action="/user/admin/create/user/complete"
    method="post"
    id="create-user"
  >
      <section id="personalData">
        <div class="input w-100">
          <label for="" id="name">Nome</label>
          <input class="w-100" type="text" id="name" name="name" required />
        </div>
        <div class="input">
          <label for="" id="cpf">CPF</label>
          <input
            type="text"
            id="cpf"
            name="cpf"
            minlength="11"
            maxlength="14"
            required
          />
        </div>
        <div class="input">
          <label for="" id="rg">RG</label>
          <input
            type="text"
            id="rg"
            name="rg"
            minlength="10"
            maxlength="12"
            required
          />
        </div>
        <div class="input">
          <label for="" id="rg">Data de Nascimento</label>
          <input type="date" name="birthDate" id="" maxlength="10" required />
        </div>
        <div class="input">
          <label for="" id="rg">Contato</label>
          <input
            type="text"
            id="cellPhone"
            name="cellNumber"
            minlength="10"
            maxlength="14"
            required
          />
        </div>
      </section>
      <section id="address">
        <div class="input">
          <label for="zipcode" id="zipcode">CEP</label>
          <input
            minlength="8"
            maxlength="9"
            type="text"
            id="zipcode"
            name="zipCode"
            placeholder="12345-678"
          />
        </div>
        <div class="input w-100">
          <label for="publicPlace" id="">Endereço</label>
          <input
            class="w-100"
            type="text"
            id="publicPlace"
            name="publicPlace"
            required
          />
        </div>
        <div class="input">
          <label for="district">Número</label>
          <input type="text" id="number" name="number" required />
        </div>
        <div class="input">
          <label for="district" id="">Bairro</label>
          <input type="text" id="district" name="district" required />
        </div>
        <div class="input">
          <label for="city" id="">Cidade</label>
          <input type="text" id="city" name="city" required />
        </div>
        <div class="input">
          <label for="state" id="">Estado</label>
          <input type="text" id="state" name="state" required />
        </div>
        <div class="input">
          <label for="complement" id="">Complemento</label>
          <input type="text" id="complement" />
        </div>
      </section>
      <section id="militaryData">
        <div class="input">
          <label for="militaryRank" id="">Patente</label>
          <input type="text" id="militaryRank" name="militaryRank" required />
        </div>
        <div class="input">
          <label for="commander" id="">Comandante</label>
          <input type="text" id="commander" name="commander" required />
        </div>
        <div class="input w-100">
          <label for="divisionAddress" id="">Endereço da divisão pertencente</label>
          <input
            class="w-100"
            type="text"
            id="divisionAddress"
            name="divisionAddress"
            required
          />
        </div>
        <div class="input w-100">
          <label for="" id="">Descrição de Cargo</label>
          <input
            class="w-100"
            type="text"
            id="officeDescription"
            name="officeDescription"
            required
          />
        </div>
        <div class="input">
          <label for="">Tipo</label>
          <select name="type" id="userType">
            <option selected value="User">Usuário</option>
            <option value="Admin">Administrador</option>
          </select>
        </div>
        <div class="input">
          <label for="password">Senha</label>
          <input type="password" id="password" name="password" minlength="6" />
        </div>
      </section>
      <button class="btn" type="submit">Cadastrar</button>
    {{/if}}
  </form>
</div>
<script src="/js/script.js"></script>
<link rel="stylesheet" href="/styles/creation.css" />